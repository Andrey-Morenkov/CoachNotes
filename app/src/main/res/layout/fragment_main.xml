<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ru.hryasch.coachnotes.main.view.NoScrollViewPager
        android:id="@+id/homeSpace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/homeNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/homeNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="4dp"
        app:activeItem="0"
        app:backgroundColor="@color/colorBackground"
        app:duration="200"
        app:iconSize="30dp"
        app:indicatorColor="@color/colorAccent"
        app:indicatorRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:sideMargins="20dp"
        app:textColor="@color/colorText" />

