<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Родственники"
        android:textSize="@dimen/default_subtitle_text_size" />

    <LinearLayout
        android:id="@+id/editPersonRelativeInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <include
            layout="@layout/element_person_edit_relative_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="visible" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/editPersonRelativeInfoAddRelative"
        style="@style/OutlinedButton.Icon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="@dimen/default_indent"
        android:text="@string/parent_info_add_parent"
        app:icon="@drawable/ic_add" />

</LinearLayout>