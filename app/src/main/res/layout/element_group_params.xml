<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardSettingElement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="@string/group_param_supported_age"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="@dimen/group_info_subtitle_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12">

            <TextView
                android:id="@+id/groupInfoTextViewAge1"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:editable="false"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/group_param_age1_sample"
                android:textSize="@dimen/group_info_user_input_text_size" />

            <ImageView
                android:id="@+id/groupInfoImageViewRangeAges"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:srcCompat="@drawable/ic_remove" />

            <TextView
                android:id="@+id/groupInfoTextViewAge2"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:editable="false"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/group_param_age2_sample"
                android:textSize="@dimen/group_info_user_input_text_size" />

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/groupInfoSpinnerAgeType"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:hint="@string/age_type_absolute"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="@dimen/group_info_user_input_text_size"
                app:spinner_arrow_padding="8dp"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_background="@color/colorPrimaryDarkHighlight"
                app:spinner_popup_height="70dp"
                app:spinner_popup_width="100dp">

            </com.skydoves.powerspinner.PowerSpinnerView>

        </LinearLayout>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/group_param_payment_method"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="@dimen/group_info_subtitle_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <TextView
            android:id="@+id/groupInfoTextViewIsPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="2dp"
            android:editable="false"
            android:gravity="center"
            android:paddingEnd="8dp"
            android:text="@string/group_param_payment_free"
            android:textSize="@dimen/group_info_user_input_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <ImageView
            android:id="@+id/groupImageViewIsPaid"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/groupInfoTextViewIsPaid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/groupInfoTextViewIsPaid"
            app:srcCompat="@drawable/ic_money" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>