<resources>

// Application themes
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorTertiary">@color/colorText</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AppThemeDarkStatusBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorTertiary">@color/colorText</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/colorText</item>
    </style>



// Cards
    <style name="StraightCard" parent="AppTheme">
        <item name="cardCornerRadius">@dimen/card_straight_type_corner_radius_size</item>
    </style>

    <style name="StraightCard.Colorized" parent="AppTheme">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
    </style>

    <style name="CardSettingElement" parent="StraightCard.Colorized"/>

    <style name="RoundCard" parent="AppTheme">
        <item name="cardCornerRadius">@dimen/card_round_type_corner_radius_size</item>
    </style>

    <style name="RoundCard.Colorized">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
    </style>



// Elements (buttons, etc)
    <style name="TransparentBackgroundImageButton">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="icon">@null</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextButton.Icon">
        <item name="icon">@drawable/ic_sample</item>
        <item name="iconTint">@color/colorText</item>
        <item name="iconPadding">@dimen/default_icon_padding</item>
    </style>

    <style name="TextButton.Accent">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextButton.Accent.Icon">
        <item name="iconPadding">@dimen/default_icon_padding</item>
        <item name="icon">@drawable/ic_sample</item>
        <item name="iconTint">@color/colorAccent</item>
    </style>


    <style name="OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="icon">@null</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="strokeColor">@color/colorAccent</item>
    </style>

    <style name="OutlinedButton.Icon">
        <item name="icon">@drawable/ic_sample</item>
        <item name="iconTint">@color/colorAccent</item>
        <item name="iconPadding">@dimen/default_icon_padding</item>
    </style>


    <style name="FilledButton" parent="Widget.MaterialComponents.Button">
        <item name="icon">@null</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>

    <style name="FilledButton.Icon">
        <item name="icon">@drawable/ic_sample</item>
        <item name="iconTint">@color/colorText</item>
        <item name="iconPadding">@dimen/default_icon_padding</item>
    </style>

    <style name="ImageButton" parent="Widget.MaterialComponents.Button">
        <item name="srcCompat">@drawable/ic_sample</item>
        <item name="tint">@color/colorPrimaryLight</item>
        <item name="iconPadding">@dimen/default_icon_padding</item>
        <item name="backgroundTint">@color/colorPrimaryDarkHighlight</item>
    </style>


    <style name="ToolbarImageButton" parent="TransparentBackgroundImageButton">
        <item name="android:layout_width">@dimen/universal_toolbar_action_img_size</item>
        <item name="android:layout_height">@dimen/universal_toolbar_action_img_size</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:padding">@dimen/universal_toolbar_action_img_margin_end</item>
        <item name="android:layout_margin">@dimen/universal_toolbar_action_img_margin_end</item>
        <item name="tint">@color/colorText</item>
        <item name="elevation">4dp</item>
    </style>
    
    <style name="TableSeparator">
        <item name="android:background">@color/colorJournalSeparator</item>
    </style>
    
    <style name="TableSeparator.Constraint">
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="TableSeparator.Constraint.Vertical">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_width">@dimen/journal_table_separator_width</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="TableSeparator.Constraint.Horizontal">
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_height">@dimen/journal_table_separator_width</item>
        <item name="android:layout_width">0dp</item>
    </style>

</resources>
